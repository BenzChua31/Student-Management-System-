<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<GridPane fx:controller="controller.SlipController" prefHeight="338.0" prefWidth="600.0" styleClass="background" alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml/1" hgap="5" vgap="5">

    <padding>
        <Insets top="10" bottom="10" left="10" right="10" />
    </padding>

    <stylesheets>
           <URL value="@tmsfx.css"/>
    </stylesheets>

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="40.0" percentWidth="40.0" prefWidth="40.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="30.0" percentWidth="30.0" prefWidth="30.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="40.0" percentWidth="40.0" prefWidth="40.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="30.0" percentWidth="30.0" prefWidth="30.0" />
    </columnConstraints>

    <Label styleClass="label-h2" text="Tuition Slip:" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="LEFT"/>

    <Text id="feedbackTxt" text="Credits:" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="LEFT"/>
    <Text id="feedbackTxt" text="TotalFee:" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="LEFT"/>
    <Text id="feedbackTxt" text="Net Fee:" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="LEFT"/>
    <Text fx:id="creditsTxT" styleClass="text-out" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="LEFT"/>
    <Text fx:id="totalFeeTxT" styleClass="text-out" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="LEFT"/>
    <Text fx:id="netFeeTxT" styleClass="text-out" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="LEFT"/>
    <Text id="feedbackTxt" text="Pay Per Credit:" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.halignment="LEFT"/>
    <Text id="feedbackTxt" text="Scholarship:" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.halignment="LEFT"/>
    <Text id="feedbackTxt" text="Deduction:" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.halignment="LEFT"/>
    <Text fx:id="payPerCreditTxT" styleClass="text-out" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.halignment="LEFT"/>
    <Text fx:id="scholarshipTxT" styleClass="text-out" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.halignment="LEFT"/>
    <Text fx:id="deductionTxT" styleClass="text-out" GridPane.columnIndex="3" GridPane.rowIndex="3" GridPane.halignment="LEFT"/>
    <Button fx:id="closeBtn" styleClass="button" text="Close" onAction="#handleClose" GridPane.columnIndex="0"
    GridPane.rowIndex="4" GridPane.columnSpan="4" GridPane.halignment="CENTER">
        <GridPane.margin>
             <Insets top="50" bottom="20"/>
        </GridPane.margin>
    </Button>


</GridPane>
